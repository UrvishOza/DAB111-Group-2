@app.route('/data')
def data():
    con = sqlite3.connect('Printed_ckt.db')
    c = con.cursor()
    c.execute('SELECT * FROM Printed_ckt LIMIT 10')  
    data = c.fetchall()
    con.close()
    return render_template('data.html', data=data)
